<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="src\main\res\Hack Western Logo Good Aspect Ratio.png"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Tutors"
    android:columnCount="1"
    android:columnOrderPreserved="true"
    android:rowOrderPreserved="true"
    android:useDefaultMargins="false">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tutor"
        android:id="@+id/tutorTitle"
        android:layout_row="0"
        android:layout_column="0"
        android:textSize="50sp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextName"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:textSize="30sp"
        android:hint="Name" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_row="2"
        android:layout_column="0" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editTextRate"
        android:layout_row="4"
        android:inputType="number"
        android:hint="Rate ($/hour)"
        android:textSize="30sp"
        android:layout_column="0" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_row="5"
        android:layout_column="0" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Math"
        android:id="@+id/checkMath"
        android:layout_row="6"
        android:checked="false"
        android:textSize="20sp"
        android:layout_column="0" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Science"
        android:id="@+id/checkScience"
        android:layout_row="7"
        android:checked="false"
        android:textSize="20sp"
        android:layout_column="0" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="English"
        android:id="@+id/checkEnglish"
        android:layout_row="8"
        android:checked="false"
        android:textSize="20sp"
        android:layout_column="0" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Programming"
        android:id="@+id/checkProgramming"
        android:layout_row="9"
        android:checked="false"
        android:textSize="20sp"
        android:layout_column="0" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_row="10"
        android:layout_column="0" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Finish"
        android:id="@+id/tutorSubmit"
        android:layout_row="11"
        android:layout_column="0"
        android:layout_gravity="center_horizontal">
    </Button>

</GridLayout>
