<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jeff.tuber.Students"
    tools:showIn="@layout/activity_tutors"
    android:columnCount="1"
    android:columnOrderPreserved="true"
    android:rowOrderPreserved="true"
    android:useDefaultMargins="false">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:capitalize="words"
        android:textSize="30sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_row="2"
        android:layout_column="0" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rate ($/hour)"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_row="4"
        android:capitalize="none"
        android:inputType="number"
        android:hint="Rate ($/hour)"
        android:textSize="30sp"
        android:layout_column="0" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_row="5"
        android:layout_column="0" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Math"
        android:id="@+id/mathCheck"
        android:layout_row="6"
        android:checked="false"
        android:textSize="20dp"
        android:layout_columnSpan="1"
        android:layout_column="0" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Science"
        android:id="@+id/scienceCheck"
        android:layout_row="7"
        android:checked="false"
        android:textSize="20dp"
        android:layout_column="0" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="English"
        android:id="@+id/englishCheck"
        android:layout_row="8"
        android:checked="false"
        android:textSize="20dp"
        android:layout_column="0" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Programming"
        android:id="@+id/programmingCheck"
        android:layout_row="9"
        android:checked="false"
        android:textSize="20dp"
        android:layout_column="0" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Select Location"
        android:id="@+id/locationSelect"
        android:layout_row="11"
        android:layout_column="0"
        android:layout_gravity="center_horizontal" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_row="10"
        android:layout_column="0" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Finish"
        android:id="@+id/tutorSubmit"
        android:layout_row="12"
        android:layout_column="0"
        android:layout_gravity="center_horizontal" />

</GridLayout>
