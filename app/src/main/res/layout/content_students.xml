<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg"
    android:layout_width="380dp"
    android:layout_height="550dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jeff.tuber.Students"
    android:columnCount="2"
    android:useDefaultMargins="false"
    android:orientation="vertical"
    android:id="@+id/gridLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Price Range ($/hour)"
        android:id="@+id/textTitle"
        android:layout_row="1"
        android:layout_column="0"
        android:textSize="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_columnSpan="2"
        android:background="#96ffffff"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student"
        android:id="@+id/studentTitle"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="center_horizontal"
        android:textSize="50sp"
        android:layout_columnSpan="2"
        android:textStyle="bold"
        android:textColor="#000000" />

    <Space
        android:layout_width="20px"
        android:layout_height="10dp"
        android:layout_row="2"
        android:layout_column="1" />

    <EditText
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/textLow"
        android:layout_row="4"
        android:layout_column="0"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:layout_columnSpan="1"
        android:background="#96ffffff"
        android:textStyle="bold"
        android:layout_marginLeft="60dp"
        android:hint="Low"
        android:paddingTop="5dp"
        android:paddingBottom="5dp" />

    <EditText
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/textHigh"
        android:layout_row="4"
        android:textAlignment="center"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:layout_gravity="right"
        android:background="#96ffffff"
        android:textStyle="bold"
        android:layout_marginRight="60dp"
        android:hint="High"
        android:paddingTop="5dp"
        android:paddingBottom="5dp" />

    <Space
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_row="5"
        android:layout_column="0" />

    <Space
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_row="5"
        android:layout_column="1" />

    <CheckBox
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Math"
        android:id="@+id/checkMath"
        android:layout_row="7"
        android:layout_column="0"
        android:checked="false"
        android:textSize="20dp"
        android:layout_columnSpan="2"
        android:background="#96ffffff"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />

    <CheckBox
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Science"
        android:id="@+id/checkScience"
        android:layout_row="8"
        android:layout_column="0"
        android:checked="false"
        android:textSize="20dp"
        android:layout_columnSpan="2"
        android:background="#96ffffff"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />

    <CheckBox
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="English"
        android:id="@+id/checkEnglish"
        android:layout_row="9"
        android:layout_column="0"
        android:checked="false"
        android:textSize="20dp"
        android:layout_columnSpan="2"
        android:background="#96ffffff"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />

    <CheckBox
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Programming"
        android:id="@+id/checkProgramming"
        android:layout_row="10"
        android:layout_column="0"
        android:checked="false"
        android:textSize="20dp"
        android:layout_columnSpan="2"
        android:background="#96ffffff"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />

    <Space
        android:layout_width="20px"
        android:layout_height="20dp"
        android:layout_row="11"
        android:layout_column="1" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/searchRadius"
        android:layout_row="12"
        android:layout_column="0"
        android:hint="Search Radius in km"
        android:textSize="25sp"
        android:layout_columnSpan="2"
        android:background="#96ffffff"
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:paddingBottom="5dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find a Tutor"
        android:id="@+id/studentSubmit"
        android:layout_row="15"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_columnSpan="2"
        android:textStyle="bold"
        android:background="#c8ffffff" />

</GridLayout>
