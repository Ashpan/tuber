<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jeff.tuber.Start"
    tools:showIn="@layout/activity_start">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Are you a"
        android:textSize="40dp"
        android:id="@+id/textPrompt"
        android:textColor="#000000"
        android:background="#96ffffff"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/textTitle"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />

    <Button
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Student"
        android:onClick="launchStudent"
        android:id="@+id/buttonStudent"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/textOr"
        android:layout_toStartOf="@+id/textOr"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="-10dp"
        android:background="#c8ffffff" />

    <Button
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Tutor"
        android:onClick="launchTutor"
        android:id="@+id/buttonTutor"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_below="@+id/textPrompt"
        android:layout_toEndOf="@+id/textOr"
        android:layout_marginTop="70dp"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="20dp"
        android:background="#c8ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tubur"
        android:textSize="70dp"
        android:id="@+id/textTitle"
        android:textColor="#000000"
        android:background="#96ffffff"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="or a"
        android:id="@+id/textOr"
        android:textColor="#000000"
        android:background="#96ffffff"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/buttonTutor"
        android:layout_centerHorizontal="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tutor Results Temp"
        android:id="@+id/button"
        android:layout_below="@+id/textTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:onClick="launchTutorResults" />

</RelativeLayout>
